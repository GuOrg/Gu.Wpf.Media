<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:media="clr-namespace:Gu.Wpf.Media">
    <SolidColorBrush x:Key="{x:Static media:Brushes.EnabledForegroundBrushKey}" Color="White" />
    <SolidColorBrush x:Key="{x:Static media:Brushes.DisabledForegroundBrushKey}"
                     Opacity="0.4"
                     Color="White" />
    <SolidColorBrush x:Key="{x:Static media:Brushes.BackgroundBrushKey}" Color="Black" />    
    <SolidColorBrush x:Key="{x:Static media:Brushes.SemiTransparentBackgroundBrushKey}"
                     Opacity="0.15"
                     Color="Black" />
</ResourceDictionary>